<Window x:Class="TriadWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriadWpf"
        xmlns:vies="clr-namespace:TriadWpf.ViewModels"
        xmlns:graphxModels="clr-namespace:TriadWpf.GraphXModels"
        xmlns:graphxctrl="clr-namespace:GraphX.Controls;assembly=GraphX.WPF.Controls"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="MainWindow" Height="326" Width="669.333">
    <Window.DataContext>
        <vies:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5">
            <graphxctrl:ZoomControl x:Name="gg_zoomctrl">
                <graphxModels:GraphAreaControl x:Name="gArea" VertexListSource="{Binding VertexList}">
                    
                </graphxModels:GraphAreaControl>
            </graphxctrl:ZoomControl>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="5">
            <Button Name="btnAddVertex" Content="Add vertex" Height="25" Margin="0,27,0,215" Command="{Binding AddVertexCommand}"></Button>
        </Border>

        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Сохранить"/>
            </MenuItem>
            <TextBox Width="75" Text="{Binding Example}"></TextBox>
        </Menu>
    </Grid>
</Window>
